; ---------------------------------------------------------------------------
; Align and pad
; input: length to align to
; ---------------------------------------------------------------------------
align	macro
	dcb.b (\1-(*%\1))%\1,$ff
	endm

;=======================================;
;	   Z80 BUS REQUEST ON		;
;=======================================;
z80bus_on	macro
	move.w	#$100,z80busreq
	endm

;=======================================;
;	   Z80 BUS REQUEST ON		;
;=======================================;
z80bus_off	macro
	move.w	#$000,z80busreq
	endm
	
z80bus_wait	macro
?loop1:
	btst.b	#0,z80busreq		; if bit on then bus req ok.
	bne.s	?loop1
	endm
	
*dcblw	macro	\1,\2,\3,\4,\5
*	dc.l	(\1)*$1000000+(\2)
*	dc.w	(\4)+(\5)*$100
*	dc.w	(\3)
*	endm
	
dcblw	macro	val1,val2,val3,val4,val5
	dc.l	(val1)<<24+(val2)
	dc.w	(val4)+(val5)*$100
	dc.w	(val3)
	endm